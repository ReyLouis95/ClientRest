@using WebApplication4.Models;
@{
    Panier panier = (Panier)Session["Panier"];
}
<div>
    <h4>Panier</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>
<p>
    @if (panier.ListeProduit.Count == 0)
    {
        <div>Votre panier est vide</div>
    }
    else
    {
        foreach (Produit produit in panier.ListeProduit)
        {
            <div>Nom: @produit.Nom</div>
            <div>Categorie: @produit.Categorie</div>
            <div>Description: @produit.Description</div>
            <div>Quantite Commandée: @produit.QuantiteStock</div>
            <div>Prix: @produit.Prix €</div>
            <br />
            <br />
        }
        @Html.ActionLink("Valider mon panier", "Index", "Inscription", null, new { @class = "bouton" })
    }



</p>
